# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Node Environment
NODE_ENV=development

# Session Management (Required)
SESSION_SECRET=your-super-secret-session-key-here

# Admin Setup (Required)
ADMIN_SETUP_TOKEN=your-admin-setup-token-here

# Firebase Service Account (JSON format - RECOMMENDED)
# Copy the entire JSON content from firebase-service-account.json
# This is the cleanest approach for production deployments
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Firebase Service Account (Base64 encoded - ALTERNATIVE)
# Get this from Firebase Console > Project Settings > Service Accounts
# OR place firebase-service-account.json in project root
FIREBASE_SERVICE_ACCOUNT_KEY=your-base64-encoded-service-account-json

# Firebase Client Configuration (Optional - loaded from service account file)
# These are only needed if you want to override the values from firebase-service-account.json
# In production, these are automatically loaded from FIREBASE_SERVICE_ACCOUNT_KEY
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# Application Settings
NEXT_PUBLIC_APP_NAME=MetaVR Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Settings
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Google Drive File ID for Auto Download
GOOGLE_DRIVE_FILE_ID=15jxv-pTmrQ9QgidJX1vscBJ4cC0xT4wi

# Netlify Deployment (for CI/CD)
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID=your-netlify-site-id
