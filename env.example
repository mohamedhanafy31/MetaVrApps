# MetaVR Dashboard Environment Variables
# Copy this file to .env.local and update the values

# =============================================================================
# REQUIRED - Core Application Settings
# =============================================================================

# Node Environment
NODE_ENV=development

# Session Management (Required)
# Generate a secure random string for production
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production

# Admin Setup (Required)
# Generate a secure random string for production
ADMIN_SETUP_TOKEN=your-admin-setup-token-here-change-this-in-production

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase Service Account (JSON format - RECOMMENDED)
# Copy the entire JSON content from firebase-service-account.json
# This is the cleanest approach for production deployments
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id","private_key_id":"your-private-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com","universe_domain":"googleapis.com"}

# Firebase Service Account (Base64 encoded - ALTERNATIVE)
# If you prefer Base64 encoding, use this instead of FIREBASE_SERVICE_ACCOUNT_JSON
# FIREBASE_SERVICE_ACCOUNT_KEY=your-base64-encoded-service-account-json

# =============================================================================
# FIREBASE CLIENT CONFIGURATION (Optional)
# =============================================================================
# These are automatically loaded from the service account JSON above
# Only set these if you want to override specific values

# Firebase API Key (Optional - loaded from service account)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key

# Firebase Messaging Sender ID (Optional - loaded from service account)
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# Firebase App ID (Optional - loaded from service account)
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Name
NEXT_PUBLIC_APP_NAME=MetaVR Dashboard

# Application URL (change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# NextAuth Secret (for authentication)
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# NextAuth URL (change for production)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# GOOGLE DRIVE CONFIGURATION (Optional)
# =============================================================================

# Google Drive File ID for Auto Download (if using file download approach)
GOOGLE_DRIVE_FILE_ID=15jxv-pTmrQ9QgidJX1vscBJ4cC0xT4wi

# =============================================================================
# NETLIFY DEPLOYMENT (for CI/CD)
# =============================================================================

# Netlify Authentication Token
NETLIFY_AUTH_TOKEN=your-netlify-auth-token

# Netlify Site ID
NETLIFY_SITE_ID=your-netlify-site-id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Custom Key (if needed)
CUSTOM_KEY=your-custom-key

# =============================================================================
# ADMIN CREDENTIALS
# =============================================================================
# Default admin credentials (change these!)
# Email: admin@metavr.com
# Password: Admin123!
